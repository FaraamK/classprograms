<script>

  const el = document.getElementById('url');

const hiddenDiv = document.getElementById("url");
  
  
$(document).ready(function(){  
    //alert("Modify the code to complete the assignment");
       $("h1").css("color", "red"); <!-- This Changes h1 color to red,sadly took to long to do -->
  
  $("a").mouseenter(function(event){
    $(this).css("background-color", "blue");
    var get = $(this).text();
    $(".url").css("border","solid 1px blue");
    $("#url").text(get);
  });
  $("a").mouseleave(function(){
    $(this).css("background-color", "lightgray")
  });
  
}); 
  
  
</script>

